# Supabase connection (use service role key for worker)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SportMonks API integration
SPORTMONKS_API_KEY=your-sportmonks-api-key-here
SPORTMONKS_BASE_URL=https://api.sportmonks.com/v3/football

# Polling interval in milliseconds (default: 15000 = 15 seconds)
POLL_INTERVAL=15000

# Dedup TTL in seconds (default: 7200 = 2 hours)
DEDUP_TTL=7200

# Snapshot mode: run once and exit (default: false)
SNAPSHOT_MODE=false

# Maximum fixtures to process per scan (for API rate limiting)
# Recommended: 3-5 for free tier to stay under daily limits
SNAPSHOT_FIXTURE_LIMIT=5

# Worker mode: live or replay (default: live)
# - live: fetch from API-Football and process matches
# - replay: read existing triggers from DB and re-send alerts
WORKER_MODE=live

# Dry run mode: simulate actions without side effects (default: false)
# - true: format alerts but don't send to Telegram
# - false: actually send alerts
DRY_RUN=false

# Use mock data instead of API-Football (default: false)
# - true: read from mock-fixtures.json (no API calls, no quota limit)
# - false: fetch from API-Football live endpoint
USE_MOCK_DATA=false
